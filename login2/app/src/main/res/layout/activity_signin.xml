<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentCode"
        android:text="Student Code"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editID"
        android:ems="10"
        android:layout_toRightOf="@+id/studentCode"
        android:layout_alignBaseline="@+id/studentCode"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PW"
        android:text="Password"
        android:layout_below="@+id/studentCode"
        android:layout_alignRight="@+id/studentCode"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPW"
        android:ems="10"
        android:layout_toRightOf="@+id/PW"
        android:layout_alignBaseline="@+id/PW"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cfPassword"
        android:text="Confirm Password"
        android:layout_below="@+id/PW"
        android:layout_alignRight="@+id/PW"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editCFPassword"
        android:ems="10"
        android:layout_toRightOf="@+id/cfPassword"
        android:layout_alignBaseline="@+id/cfPassword"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"/>
